<% layout('layout') %>

<div class="max-w-xl mx-auto mt-10 p-6 bg-white rounded-lg shadow-md">
  <h1 class="text-2xl font-bold text-blue-700 mb-6"><%= title %></h1>

  <% if (poll.Options && poll.Options.length > 0) { %>
    <form action="/vote" method="POST" class="space-y-4">

      <p class="font-medium text-gray-800">Pilih salah satu opsi:</p>
      <% poll.Options.forEach(option => { %>
        <div class="flex items-center space-x-2">
          <input
            type="radio"
            name="optionId"
            id="option-<%= option.id %>"
            value="<%= option.id %>"
            required
            class="text-blue-600 focus:ring-blue-500"
          />
          <label for="option-<%= option.id %>" class="text-gray-700"><%= option.text %></label>
        </div>
      <% }) %>

      <div>
        <p class="mt-4 text-gray-800">Atau masukkan pilihan sendiri:</p>
        <input
          type="text"
          name="customOption"
          placeholder="Opsi lainnya..."
          oninput="clearRadio()"
          class="w-full border border-gray-300 mt-1 px-3 py-2 rounded focus:outline-none focus:ring focus:border-blue-400"
        />
      </div>

      <input type="hidden" name="pollId" value="<%= poll.id %>" />

      <button
        type="submit"
        class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition"
      >
        Vote
      </button>
    </form>
  <% } else { %>
    <p class="text-red-600 font-semibold">Tidak ada opsi untuk polling ini.</p>
  <% } %>

  <div class="mt-6 text-center">
    <a href="/" class="text-blue-600 hover:underline">â¬… Kembali ke Beranda</a>
  </div>
</div>

<script>
  function clearRadio() {
    const radios = document.querySelectorAll('input[type="radio"]');
    radios.forEach(r => r.checked = false);
  }
</script>
